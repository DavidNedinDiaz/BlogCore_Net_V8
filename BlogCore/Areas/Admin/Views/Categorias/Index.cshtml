@{
	ViewData["Title"] = "Lista de Categorías";
}

<div class="container mt-3">
	<div class="row mb-3">
		<div class="col-8">
			<h2 class="text-primary">Lista de Categorias</h2>
		</div>

		<div class="col-4">
			<a asp-action="Create" class="btn btn-primary" ><i class="fa-solid fa-plus"></i>Crear nueva categoría </a>
		</div>
	</div>


	<table id="tblCategorias" class="table table-striped table-bordered " style="width: 100%" >
		<thead>
			<tr>
				<th>Id</th>
				<th>Nombre</th>
				<th>Orden</th>
				<th>Acciones</th>
			</tr>
		</thead>

	</table>

</div>



@section Script {
	<script src="~/js/categorias.js"></script>
}





